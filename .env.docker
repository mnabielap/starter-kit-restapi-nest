# Application Port (Matches Docker mapping)
PORT=5005
NODE_ENV=production

# Database Configuration (PostgreSQL)
DB_TYPE=postgres
# IMPORTANT: This must match the --name of the database container
DB_HOST=restapi-nest-db
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=secure_password
DB_NAME=nest_db
DB_SYNC=true

# JWT Configuration
JWT_SECRET=super_secure_docker_secret_key
JWT_ACCESS_EXPIRATION_MINUTES=30
JWT_REFRESH_EXPIRATION_DAYS=30
JWT_RESET_PASSWORD_EXPIRATION_MINUTES=10
JWT_VERIFY_EMAIL_EXPIRATION_MINUTES=10

# Mail Configuration (Example)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=user@example.com
SMTP_PASSWORD=password
EMAIL_FROM=noreply@docker.local